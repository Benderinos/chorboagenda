<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Chorboagenda.Contact"/>

    <style name="Chorboagenda.Contact.Details">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/contact_details_margin_start</item>
        <item name="android:textColor">@color/contact_details_text_color</item>
        <item name="android:textSize">@dimen/contact_details_text_size</item>
        <item name="android:fontFamily">@string/text_font_family_medium</item>
        <item name="layout_constraintStart_toEndOf">@id/image</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="SingleLineTextView">
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ChorboagendaTheme.Toolbar">
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="toolbar_titleTextColor">@color/toolbar_title_text_color</item>
        <item name="toolbar_buttonIconColor">@color/toolbar_button_icon_color</item>
        <item name="toolbar_titleTextSize">@dimen/toolbar_title_text_size</item>
        <item name="toolbar_titleTextGravity">center</item>
    </style>

    <style name="ChorboagendaTheme.Toolbar.White" parent="ChorboagendaTheme.Toolbar">
        <item name="android:background">@color/toolbar_background_color</item>
        <item name="toolbar_titleTextColor">@color/colorPrimaryTextInverse</item>
        <item name="toolbar_buttonIconColor">@color/colorPrimaryTextInverse</item>
        <item name="toolbar_titleTextSize">@dimen/toolbar_title_text_size</item>
        <item name="toolbar_titleTextGravity">center</item>
    </style>

</resources>
